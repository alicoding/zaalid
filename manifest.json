{
    "name": "ZaaliD",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Zarah and Ali Development introduce you to an amazing MakeDrive extension. Add an image to your MakeDrive FileSystem.",
    "permissions": [
        "contextMenus",
        "downloads",
        "<all_urls>"
     ],
    "background": {
      "scripts": ["main.js", "makedrive.js"]
    },
    "icons": { "16": "icon-16.png",
               "32": "icon-32.png",
              "64": "icon-64.png"
            }
}
